<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Metadata for SEO and browser behavior -->
    <meta name="description" content="Track your favorite anime, explore new releases, and discover hidden gems.">
    <meta name="keywords" content="anime, animes, anime tracker, watchlist tracker, recommendations">
    <meta name="author" content="MirkoLouis">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS for styling and responsiveness -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Swiper CSS for carousels -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <!-- jQuery (slim version) for certain functionalities -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <!-- Swiper JS for interactive carousels -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <!-- Custom stylesheet -->
    <link rel="stylesheet" href="/style.css">
    <title>Meerko</title>
</head>
<body>
    <!-- Page title for the search results page. -->
    <h1>Search Results</h1>
    <!-- Input field for users to refine or perform a new search. -->
    <input type="text" id="liveSearchInput" placeholder="Search again..." value="{{query}}">

    <!-- Container for displaying anime search results in a grid format. -->
    <div id="animeList" class="row row-cols-1 row-cols-md-5 g-4">Loading...</div>
    
    <!-- Client-side JavaScript for fetching and displaying anime search results dynamically.
    It fetches data based on the search query and updates the anime grid. -->
    <script>
        const input = document.getElementById('liveSearchInput');
        const list = document.getElementById('animeList');

        async function fetchAndDisplay(query) {
            const res = await fetch(`/api/anime?q=${encodeURIComponent(query)}`);
            const animes = await res.json();

            list.innerHTML = animes.map(anime => `
            <div class="anime-card">
            <img src="${anime.image_url}" class="card-img-top" alt="${anime.title}">
                <h5>${anime.title}</h5>
                <p>Type: ${anime.type || 'No anime type'}</p>
                <p>Episodes: ${anime.episodes || 'No description'}</p>
                <p>Rating: ${anime.rating || 'No rating'}</p>
            </div>
            `).join('');
        }

        // Initial load
        fetchAndDisplay(input.value);

        // Live filter as you type
        input.addEventListener('input', () => {
            fetchAndDisplay(input.value);
        });
    </script>
</body>